



<center>
<h3>Discover Restaurants</h3>
<%= form_tag "/search", :class=> "navbar-form navbar-left", method: :post do %>
            <div class="form-group">
              <input type="text" class="form-control" placeholder="find a restaurant" name="search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
</form>
</center>


  <div class="container">  
  <div class="fluid">
  <div class="row">
  <div class="col-md-4">
    <div class="thumbnail">



<% @restaurants.each do |restaurant|%>

        <a href="/restaurants/<%=restaurant.id%>"><%= restaurant.name %></a><br>

        <img src="<%= restaurant.image_url %>" style="width:50%"><br>
        
 <%end%>  

